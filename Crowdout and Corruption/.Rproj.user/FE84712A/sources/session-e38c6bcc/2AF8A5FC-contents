```{r, echo = FALSE, eval = FALSE}
t <- lfs |>
  mutate(tax_revenue = total_tax_revenue / pop07nso) |> 
  filter(!is.na(work_hrs_last_wk)) |> 
  mutate(work_hrs_last_wk = as.numeric(work_hrs_last_wk)) |> 
  mutate(sex = as.factor(C06_SEX), age = as.numeric(C07_AGE))

mediation_sample <- t |> dplyr::select(covariates, work_hrs_last_wk) |> 
    mutate(across(everything(), ~ ifelse(is.nan(.), NA, .))) |> 
    mutate(across(c(kalahi_spending_percap, work_hrs_last_wk), ~ (. - mean(., na.rm = T)) / sd(., na.rm = T))) |> 
    mice(method = "rf", seed = 214, print = F) |> complete()

  
  # Fit mediator and outcome models
  m.m <- lm(kalahi_spending_percap ~ treat * vote_diff + as.factor(C06_SEX) + as.numeric(C07_AGE) + yolanda + bgytot +
              pi + pop07nso + land + as.factor(quarter), data = mediation_sample)
  m.y <- lm(work_hrs_last_wk ~ treat + kalahi_spending_percap * vote_diff + as.factor(C06_SEX) + as.numeric(C07_AGE) + yolanda +
               bgytot + pi + pop07nso + land + as.factor(quarter),
            data = mediation_sample)
  
  # Loop over vote margins and fit respective mediation model
  mod <- mediate(
    m.m,
    m.y,
    treat = "treat",
    mediator = "kalahi_spending_percap",
    covariates = list(vote_diff = .7),
    robustSE = TRUE,
    sims = 1000)
  
  summary(mod)
  
mediation_work_last_wk <- run_mediation_by_quintile(t, "work_hrs_last_wk", c("sex", "age", "quarter"))
```

