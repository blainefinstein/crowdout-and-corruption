```{r, warning = F, message = F, echo = F, output = F}
# Conditional ACMEs
library(mice)
library(mediation)

# Take: data, outcome, and covariates; return: causal mediation data for each vote difference quintile
run_mediation_by_quintile <- function(data, Y, X = NULL) {
  # Ensure key variables are included
  all_vars <- unique(c(X, Y, "treat", "kalahi_spending_percap", "vote_diff", "total_spending_percap",
                       "yolanda", "pop07nso", "bgytot", "pi", "land"))

  # Standardize outcome and mediator, then impute
  mediation_sample <- data |> 
    dplyr::select(all_of(all_vars)) |> 
    mutate(across(everything(), ~ ifelse(is.nan(.), NA, .))) |> 
    mutate(across(c(kalahi_spending_percap, total_spending_percap, Y),
                  ~ (. - mean(., na.rm = TRUE)) / sd(., na.rm = TRUE))) |> 
    mice(method = "rf", seed = 214, print = FALSE) |> 
    complete()

  # Create covariate formula terms
  covariate_terms <- paste(X, collapse = " + ")
  fixed_terms_mediator <- "treat * vote_diff + yolanda + pop07nso + bgytot + pi + land"
  fixed_terms_outcome <- "treat + kalahi_spending_percap * vote_diff + yolanda + pop07nso + bgytot + pi + land"

  # Append user-supplied covariates to formulas
  full_mediator_formula <- as.formula(paste("kalahi_spending_percap", "~", paste(fixed_terms_mediator,
                                                                                covariate_terms, sep = " + ")))
  full_outcome_formula <- as.formula(paste(Y, "~", paste(fixed_terms_outcome, covariate_terms, sep = " + ")))

  # Fit models
  m.m <- lm(full_mediator_formula, data = mediation_sample)
  m.y <- lm(full_outcome_formula, data = mediation_sample)

  # Get vote margin quantiles
  vote_margins <- quantile(mediation_sample$vote_diff, probs = c(0.1, 0.3, 0.5, 0.7, 0.9))

  # Loop over margins and mediate
  mod <- lapply(vote_margins, function(m) {
    mediate(
      m.m,
      m.y,
      treat = "treat",
      mediator = "kalahi_spending_percap",
      covariates = list(vote_diff = m),
      robustSE = TRUE,
      sims = 1000
    )
  })

  # Compile results
  res <- map_df(
    names(mod),
    ~{
      summary_out <- summary(mod[[.x]])
      tibble(
        outcome = Y,
        vote_margin_bin = factor(.x, levels = names(mod), ordered = TRUE),
        acme = summary_out$d.avg,
        acme_pval = summary_out$d.avg.p,
        acme_lower = summary_out$d.avg.ci[1],
        acme_upper = summary_out$d.avg.ci[2],
        ade = summary_out$z.avg,
        ade_pval = summary_out$z.avg.p,
        ade_lower = summary_out$z.avg.ci[1],
        ade_upper = summary_out$z.avg.ci[2],
        total_effect = summary_out$tau.coef,
        total_pval = summary_out$tau.p,
        total_lower = summary_out$tau.ci[1],
        total_upper = summary_out$tau.ci[2]
      )
    }
  )

  return(res)
}

mediation_effects <- run_mediation_by_quintile(infra, "dist_pub_services", c("non_complier", "mun"))
mediation_effects <- mediation_effects |> 
  rbind(run_mediation_by_quintile(infra, "travel_time", c("non_complier", "mun"))) |> 
  rbind(run_mediation_by_quintile(infra, "travel_cost", c("non_complier", "mun"))) |> 
  rbind(run_mediation_by_quintile(spending, "hh_spending", c("non_complier", "mun", "NumHHMem")))
mediation_effects <- mediation_effects |> 
  rbind(run_mediation_by_quintile(spending, "hh_produce", c("non_complier", "mun", "NumHHMem"))) |> 
  rbind(run_mediation_by_quintile(edu, "num_teachers", c("non_complier", "mun"))) |> 
  rbind(run_mediation_by_quintile(edu, "num_schools", c("non_complier", "mun"))) |> 
  rbind(run_mediation_by_quintile(edu, "enrollment", c("non_complier", "mun"))) |> 
  rbind(run_mediation_by_quintile(agri, "area_planted", c("non_complier", "mun")))
mediation_effects <- mediation_effects |> 
  rbind(run_mediation_by_quintile(agri, "qty_harvest", c("non_complier", "mun"))) |> 
  rbind(run_mediation_by_quintile(agri, "qty_harvest_sold", c("non_complier", "mun"))) |> 
  rbind(run_mediation_by_quintile(labor, "income", c("non_complier", "mun", "rid9_sex"))) |> 
  rbind(run_mediation_by_quintile(labor, "work_hrs", c("non_complier", "mun", "rid9_sex"))) |> 
  rbind(run_mediation_by_quintile(labor, "hrs_worked_last_wk", c("non_complier", "mun", "rid9_sex")))
```

