#include = F, eval = F
# Visualize mediation

# ACMEs
acme <- mediation_effects |> 
  ggplot(aes(x = vote_margin_bin, y = acme, group = outcome)) +
  geom_smooth(method = "lm", se = F) +
  coord_cartesian(ylim = c(-.3, .3)) +
  labs(
    x = "Vote margin",
    y = "Effect size",
    title = "Average causal mediation effects"
  ) +
  theme_minimal()

# ACMEs
ade <- mediation_effects |> 
  ggplot(aes(x = vote_margin_bin, y = ade, group = outcome)) +
  geom_smooth(method = "lm", se = F) +
  coord_cartesian(ylim = c(-.3, .3)) +
  labs(
    x = "Vote margin",
    y = "",
    title = "Average direct effects"
  ) +
  theme_minimal()

acme + ade +
  plot_annotation(
    title = "Indirect vs direct effects of treatment by vote margin",
    theme = theme(plot.title = element_text(size = 30, hjust = 0.5))
  )
